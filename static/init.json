{
	"mirror": {
			"fieldname": "esgf_mirrors",
			"title": "Select an ESGF distribution mirror for this installation",
			"type": "select",
			"options": [
						"distrib-coffee.ipsl.jussieu.fr/pub/esgf",
						"dist.ceda.ac.uk/esgf",
						"aims1.llnl.gov/esgf",
						"esg-dn2.nsc.liu.se/esgf"
						],
